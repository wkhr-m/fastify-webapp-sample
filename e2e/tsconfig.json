{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "types": ["codeceptjs", "node"],
    "typeRoots": ["./node_modules/@types", "./"],
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": [
    "steps.d.ts",
    "**/*.ts"
  ]
}